                                </li>

                                <li><hr class="dropdown-divider"></li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Freelancer" asp-action="Index">Add Freelancer</a>
                        </li>
                        @* } *@
