@model ShoppingCart
<form method="post">
    <input hidden asp-for="FreelancerId"/>
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Freelancer.Name</h3>
                    <p class="text-white-50 fw-semibold mb-0">@Model.Freelancer.Skills</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.Freelancer.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">@Model.Freelancer.Category.CategoryName</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                List Price:
                                <span class="">
                                    @Model.Freelancer.ListPrice.ToString("c")
                                </span>
                            </h6>
                        </div>
                        <div class="row pl-2 my-3">
                            <div class="col-6">
                                <div class="p-3 rounded border bg-light text-center shadow-sm">
                                    <h6 class="text-muted text-uppercase fw-bold mb-1">Years of Experience</h6>
                                    <p class="fs-5 fw-semibold text-dark mb-0">@Model.Freelancer.YearsOfExperience</p>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3 rounded border bg-light text-center shadow-sm">
                                    <h6 class="text-muted text-uppercase fw-bold mb-1">Age</h6>
                                    <p class="fs-5 fw-semibold text-dark mb-0">
                                        @(DateTime.Now.Year - Model.Freelancer.DateOfBirth.Year -
                                            (DateTime.Now < Model.Freelancer.DateOfBirth.AddYears(DateTime.Now.Year - Model.Freelancer.DateOfBirth.Year) ? 1 : 0))
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(Model.Freelancer.ProfileDescription)</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-12">
                                @if (!string.IsNullOrEmpty(Model.Freelancer.CV))
                                {
                                    <a href="@Url.Content(Model.Freelancer.CV)" target="_blank" class="btn btn-outline-success">
                                        <i class="fa fa-download"></i> Download CV
                                    </a>
                                }
                                else
                                {
                                    <p class="text-danger">No CV uploaded for this freelancer.</p>
                                }
                            </div>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Days
                                    </span>
                                    <input asp-for="CountDays" type="number" value="7" min="1"
                                           max="10" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" 
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart 
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
