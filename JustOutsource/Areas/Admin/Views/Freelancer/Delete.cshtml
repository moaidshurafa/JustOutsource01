@model Freelancer
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Freelancer</h2>
            </div>

        </div>

    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-asp-for="Id" hidden />
            <div class="border p-3 m-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Skills" disabled class="form-control border-0 shadow" />
                    <label asp-for="Skills" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ProfileDescription" disabled class="form-control border-0 shadow" />
                    <label asp-for="ProfileDescription" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Category" disabled class="form-control border-0 shadow" />
                    <label asp-for="Category" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Freelancer" asp-action="Index" class="btn btn-secondary border form-control">Back To List</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>